<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>

    <div class="posts">
      <% include partials/top %>

      <div class="index">
        <a href="/posts/new">
          <button type="button" name="button">New</button>
        </a>
        <% if (user) { %>
          <a href="/logout" class="float_right">
            <button type="button">Logout</button>
          </a>
          <a href="/users/<%= user._id %>" class="float_right">
            <button type="button">My Profile (<%= user.nickname %>)</button>
          </a>
        <% } else { %>
          <a href="/logoin" class="float_right">
            <button type="button">Login</button>
          </a>
          <a href="/users/new" class="float_right">
            <button type="button">Sign Up</button>
          </a>
        <% } %>
        <ul>
          <li class="header">Title
            <span class="float_right">Date</span>
            <span class="float_right">Author</span>
          </li>
          <% posts.forEach(function(post) { %>
            <li>
              <a href="/posts/<%= post._id %>"><%= post.title %></a>
              <span class="float_right"><%= post.createdAt.toLocaleDateString() %></span>
              <span class="float_right"><%= post.author.nickname %></span>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>

    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
